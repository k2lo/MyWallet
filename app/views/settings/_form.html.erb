<%= form_for(setting) do |f| %>
  <% if setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

      <ul>
      <% setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :budget %>
    <%= f.number_field :budget, value: number_to_currency(delimiter: '', unit: ''), step: :any %>
  </div>
  
  <div class="field">
    <%= f.label :currency %>
    <%= f.select :currency, options_for_select([ "€", "$", "PLN" ], "€") %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
