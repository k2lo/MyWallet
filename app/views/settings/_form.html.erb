<%= form_for(setting) do |f| %>
	<% if setting.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(setting.errors.count, "error") %> prohibited this setting from being saved:</h2>
			<ul>
				<% setting.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row">
		<div class="col-sm-8">
			<%= f.label :budget %>
			<%= f.number_field :budget, :value => setting.set_budget, :class => 'form-control' %>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-8">
			<%= f.label :currency %>
			<%= f.select :currency, options_for_select([ ISO4217::Currency.from_code('USD').symbol, ISO4217::Currency.from_code('PLN').symbol, ISO4217::Currency.from_code('EUR').symbol ], ISO4217::Currency.from_code('USD').symbol), :class => 'form-control' %>
		</div>
	</div>

	<div class="actions">
		<%= f.submit :class => 'btn btn-primary' %>
	</div>

<% end %>
