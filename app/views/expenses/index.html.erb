<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do | expense| %>
      <tr>
        <td><%= expense.value %></td>
        <td><%= link_to expense.description, category_expense_path(@category, expense) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

