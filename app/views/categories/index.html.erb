<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @categories.each do |category| %>
      <% if (current_user == category.user) %>
        <tr>
          <td><%= link_to category.name, category %> </td>
          <td><%= number_to_currency(category.expenses.sum(&:value), :unit => @setting.currency, format: "%n %u") %></td>
          <td><%= number_to_percentage((category.expenses.sum(&:value))/(@expenses.where(user_id: current_user).sum(&:value))*100.0, precision: 0) %></td>
          <td><%= link_to 'New expense', new_category_expense_path(category) %></td>
        </tr>
      <% end %>
    <% end %>
      <td>All expenses: </td>
      <td><%= number_to_currency(@expenses.where(user_id: current_user).sum(&:value), :unit => @setting.currency, format: "%n %u") %></td>
