<h1>Settings</h1>
<%= form_tag categories_path, :method => 'get' do %>
    <div class="field">
        <%= label_tag :budget %>
        <%= number_field_tag :budget, value: number_to_currency(delimiter: '', unit: ''), step: :any %>
    </div>

    <div class="actions">
        <%= submit_tag "Submit" %>
    </div>
<% end %>

<%= form_tag categories_path, :method => 'get' do %>
    <div class="field">
        <%= label_tag :currency %>
        <%= select_tag :currency, options_for_select([ "€", "$", "PLN" ], "€")%>
    </div>

    <div class="actions">
        <%= submit_tag "Submit" %>
    </div>
<% end %>